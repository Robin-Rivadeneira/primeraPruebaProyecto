{
  "expo": {
    "name": "firmaElectronica",
    "slug": "firmaElectronica",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/img/goIdentity.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./public/img/goIdentity.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*",
      "./public/img/*",
      "./public/json/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para escanear códigos QR."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/img/goIdentity.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.robinjos.firmaElectronica",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./public/img/goIdentity.png"
    },
    "extra": {
      "eas": {
        "projectId": "032198ff-d0c0-48df-9a22-15f595e11314"
      }
    },
    "owner": "robinjos",
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acceso a la cámara para verificación biométrica",
          "microphonePermission": "Permitir acceso al micrófono para grabación de video",
          "recordAudioAndroid": true
        }
      ],
      "expo-asset"
    ]
  }
}